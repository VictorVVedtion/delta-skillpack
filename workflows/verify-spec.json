{
  "name": "verify-spec",
  "description": "Specification verification - Validate implementation against specs",
  "engine": "claude",
  "variants": 1,
  "prompt_template": "verify-spec.md",
  "task_type": "verification",
  "claude": {
    "model": "claude-opus-4-5-20251101",
    "timeout_seconds": 600,
    "dangerously_skip_permissions": false,
    "extended_thinking": true
  },
  "output": {
    "dir": "verify",
    "pattern": "verification.md"
  },
  "knowledge_hooks": {
    "enabled": true,
    "query_before": true,
    "notebook_types": ["standards", "api", "domain"],
    "queries": [
      "What are the specifications and requirements for {{TASK}}?",
      "What acceptance criteria must be met for {{TASK}}?",
      "What validation rules apply to {{TASK}}?"
    ]
  }
}
