{
  "name": "plan",
  "description": "Architecture planning - Claude Opus 4.5 for deep reasoning",
  "engine": "claude",
  "variants": 5,
  "prompt_template": "plan.md",
  "task_type": "planning",
  "claude": {
    "model": "claude-opus-4-5-20251101",
    "timeout_seconds": 600,
    "dangerously_skip_permissions": false
  },
  "output": {
    "dir": "plans",
    "pattern": "plan_{i}.md"
  },
  "knowledge_hooks": {
    "enabled": true,
    "query_before": true,
    "notebook_types": ["architecture", "patterns"],
    "queries": [
      "What is the recommended architecture for {{TASK}}?",
      "Are there existing patterns or ADRs related to {{TASK}}?"
    ]
  }
}
